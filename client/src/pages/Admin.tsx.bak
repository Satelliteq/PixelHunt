// Admin SayfasÄ±na GiriÅŸ KontrolÃ¼
function AdminAccess() {
  const { user, loading } = useAuth();
  const [, setLocation] = useLocation();
  const { toast } = useToast();
  
  useEffect(() => {
    // KullanÄ±cÄ± yÃ¼klendikten sonra kontrolleri yap
    if (!loading) {
      // KullanÄ±cÄ± giriÅŸ yapmamÄ±ÅŸ
      if (!user) {
        toast({
          title: "EriÅŸim reddedildi",
          description: "Bu sayfaya eriÅŸmek iÃ§in giriÅŸ yapmalÄ±sÄ±nÄ±z.",
          variant: "destructive",
        });
        setLocation("/login");
      } else {
        // Admin rolÃ¼ kontrolÃ¼
        const checkAdminAccess = async () => {
          try {
            // Ã–nce hardcoded admin listesini kontrol et
            const isAdminByList = user.uid === '108973046762004266106' ||
                      user.email === 'pixelhuntfun@gmail.com';
                      
            if (isAdminByList) {
              return true;
            }

            // Firestore'dan admin rolÃ¼nÃ¼ kontrol et
            const userRef = doc(db, 'users', user.uid);
            const userSnap = await getDoc(userRef);
            
            if (userSnap.exists()) {
              const userData = userSnap.data();
              return userData.role === 'admin';
            }

            return false;
          } catch (error) {
            console.error('Admin kontrolÃ¼ hatasÄ±:', error);
            return false;
          }
        };

        checkAdminAccess().then(isAdmin => {
        if (!isAdmin) {
          toast({
            title: "EriÅŸim reddedildi",
            description: "Bu sayfaya eriÅŸmek iÃ§in admin yetkisine sahip olmalÄ±sÄ±nÄ±z.",
            variant: "destructive",
          });
          setLocation("/");
        }
        });
      }
    }
  }, [user, loading, toast, setLocation]);
  
  // KullanÄ±cÄ± yÃ¼kleniyor
  if (loading) {
    return (
      <div className="flex items-center justify-center min-h-screen">
        <Loader2 className="w-8 h-8 animate-spin text-primary mb-4" />
        <p className="text-muted-foreground">Yetkilendiriliyor...</p>
      </div>
    );
  }
  
  // KullanÄ±cÄ± yÃ¼klendi ve admin yetkisi varsa gÃ¶ster
  if (user) {
    return <AdminPanel />;
  }
  
  // Yetkilendirme kontrolleri useEffect ile yapÄ±lÄ±yor, boÅŸ bir div dÃ¶ndÃ¼r
  return <div className="flex items-center justify-center min-h-screen"></div>;
}

